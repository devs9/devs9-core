{
  "compilerOptions": {
    "jsx": "react",
    "outDir": "core",
    "target": "ES2015",
    "module": "ESNext",
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "allowJs": false,
    "sourceMap": true,
    "declaration": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "resolveJsonModule": true,
    "noUnusedParameters": true,
    "suppressImplicitAnyIndexErrors": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "DOM",
      "ES6",
      "ES2016",
      "ES2017"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "core",
    "**/core/**",
    "**/build/**",
    "**/coverage/**",
    "**/node_modules/**",
    "rollup.config.js"
  ]
}
